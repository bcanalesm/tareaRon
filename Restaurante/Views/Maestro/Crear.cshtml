@model Restaurante.Models.Mesa

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Mesa</legend>

        

        <div class="editor-label">
            @Html.LabelFor(model => model.Capacidad)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacidad)
            @Html.ValidationMessageFor(model => model.Capacidad)
        </div>

        <p>
            <input type="submit" id="crearMesa" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar a la lista de Mesas", "Mesa")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/RestaurantePrincipal/Crear.js"></script>
